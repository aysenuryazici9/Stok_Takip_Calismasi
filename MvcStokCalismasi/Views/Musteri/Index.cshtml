@using MvcStokCalismasi.Models.Entity
@model List<TBLMUSTERILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
{
    <p>
        <b>Aranacak Müşteri Adı: </b>@Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}
<table class="table table-bordered">
    <tr>
        <th>Müşteri ID</th>
        <th>Müşteri Adı</th>
        <th>Müşteri Soyadı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Alert</th>
    </tr>
    <tbody>
        @foreach (var mus in Model)
        {
        <tr>
            <th>@mus.MUSTERIID</th>
            <td>@mus.MUSTERIAD</td>
            <td>@mus.MUSTERISOYAD</td>
            <td><a href="/MUSTERI/SIL/@mus.MUSTERIID" class="btn btn-danger">Sil</a></td>
            <td><a href="/MUSTERI/MusteriGetir/@mus.MUSTERIID" class="btn btn-success">Güncelle</a></td>
            <td>@Html.ActionLink("SİL BUTONU", "SIL", new { id = mus.MUSTERIID }, new { @class = "btn btn-warning", onclick = "return confirm('Silmek İstedğinize Emin Misiniz?')" })</td>
        </tr>
            }
    </tbody>
</table>
<a href="/MUSTERI/YeniMusteri/" class="btn btn-primary">Yeni Müşteri Ekle</a>
